<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" tools:context=".MainActivity"
    android:gravity="center"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="50dp"
        android:background="#ffffff">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffffff"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_margin="20dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:id="@+id/imageButtonTabla"
                    android:layout_weight="2.02"
                    android:src="@mipmap/ic_view_comfy_black_24dp"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:elevation="1dp"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:id="@+id/imageButtonCuanto"
                    android:layout_weight="2.02"
                    android:src="@mipmap/ic_help_black_24dp"
                    android:background="#00000000"
                    android:scaleType="fitCenter"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="TABLA DE\nCONVERSIÓN"
                    android:id="@+id/textView_tabla"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="¿CUÁNTO ME\nFALTA?"
                    android:id="@+id/textView_cuanto"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:paddingTop="60dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:id="@+id/imageButtonGuarda"
                    android:layout_weight="2.02"
                    android:background="#00000000"
                    android:src="@mipmap/ic_save_black_24dp"
                    android:scaleType="fitCenter"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:id="@+id/imageButtonCalcula"
                    android:layout_weight="2.02"
                    android:src="@mipmap/ic_exposure_black_24dp"
                    android:background="#00000000"
                    android:scaleType="fitCenter"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="GUARDA TUS\nNOTAS"
                    android:id="@+id/textView_guarda"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="CALCULA TU\nINDICE"
                    android:id="@+id/textView_calcula"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>